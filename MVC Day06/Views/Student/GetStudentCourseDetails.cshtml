@model StudentCourseDetailsViewModel

@{
    ViewData["Title"] = "Student Course Details";
}

<body class="bg-light">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Student Course Details</h3>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-3 text-muted">
                                            Student
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Model.StudentName
                                        </dd>
                                        <dt class="col-sm-3 text-muted">
                                            Course
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Model.CourseName
                                        </dd>
                                        <dt class="col-sm-3 text-muted">
                                            Degree
                                        </dt>
                                        <dd class="col-sm-9">
                                            <span style="color:@(int.Parse(Model.Grade) >= int.Parse(Model.MinDegree) ? "green" : "red")">@Model.Grade</span>
                                        </dd>
                                    </dl>
                                </div>
                                <div class="card-footer text-center">
                                    <a class="btn btn-secondary mt-3" asp-action="GetAll">Back to List</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
