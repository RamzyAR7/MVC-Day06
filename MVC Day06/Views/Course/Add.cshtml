@model CourseViewModel
@{
    ViewData["Title"] = "Add Course";
}
<body class="bg-light">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Add Course</h3>
                                </div>
                                <div class="card-body">
                                    <form asp-action="Add" method="post">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                                            <label asp-for="Name">Name</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Degree" class="form-control" placeholder="Enter Max Degree" />
                                            <label asp-for="Degree">Degree</label>
                                            <span asp-validation-for="Degree" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="MinDegree" class="form-control" placeholder="Enter minimum degree" />
                                            <label asp-for="MinDegree">Minimum Degree</label>
                                            <span asp-validation-for="MinDegree" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <select asp-for="DepartmentId" asp-items="ViewBag.DeptList" class="form-control">
                                                <option value=""> --- Select Department --- </option>
                                            </select>
                                            <label asp-for="DepartmentId">Department</label>
                                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="d-grid">
                                                <input type="submit" value="Add" class="btn btn-primary btn-block" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    @section Scripts_jquery {
         <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
